{
  "globals" : {

  },
  "node_defaults" : {
    "interfaces": ["bond0.nmn0", "bond0.hmn0", "bond0.cmn0"],
    "source_image": "kubernetes-vm",
    "volume_arch": "x86_64",
    "volume_format": "qcow2",
    "volume_uri": "http://bootserver/nexus/repository/fawkes-images/kubernetes-vm",
    "volume_size": "100"
  },
  "nodes" : {
    "ncn-h001" : {
      "uri" : "qemu+ssh://root@hypervisor.local/system?keyfile=/root/.ssh/id_ed25519",
      "sub_role" : "master"
    },
    "ncn-h002" : {
      "uri" : "qemu+ssh://root@ncn-h002/system?keyfile=/root/.ssh/id_ed25519",
      "sub_role" : "worker"
    },
    "ncn-h003" : {
      "uri" : "qemu+ssh://root@ncn-h003/system?keyfile=/root/.ssh/id_ed25519",
      "sub_role" : "worker"
    }
  }
}
